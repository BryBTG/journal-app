
<div class="card">
  <h5 class="card-header"><%= @task.deadline.strftime("%B %d, %Y | %l:%M %p")%></h5>
  <div class="card-body">
    <h5 class="card-title"><%= @task.title %></h5>
    <p class="card-text"><%= @task.body %></p>
    <div class="d-flex flex-row">
      <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary ms-1" %>
      <%= button_to "Delete", @task, method: :delete, class: "btn btn-danger ms-1", :onclick => "return confirm('Are you sure?')" %>
    </div>
  </div>
</div>
